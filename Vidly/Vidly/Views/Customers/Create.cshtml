@model CreateCustomerViewModel
@{
    ViewBag.Title = "Create";
}

<h1> New Customer</h1>

<form method="post" asp-action="Create" asp-controller="Customers">

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="@Model.Customer.Name"></label>
        <input asp-for="@Model.Customer.Name" class="form-control" />
        <span asp-validation-for="@Model.Customer.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
      @Html.LabelFor(m => m.Customer.BirthDate)
        @Html.TextBoxFor(m => m.Customer.BirthDate, "{0:d MMM yyyy}", new { @class = "form-control"})
        @Html.ValidationMessageFor(m => m.Customer.BirthDate)
    </div>

    <div class="form-group">
        <label asp-for="@Model.Customer.MembershipTypeId"></label>
        <select class="form-control" asp-for="@Model.Customer.MembershipTypeId"
                asp-items="@(new SelectList(Model.MembershipTypes, "Id", "Name"))">
            <option value="" selected>Please select</option>
        </select>
        <span asp-validation-for="@Model.MembershipTypes" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="form-check">
            <input asp-for="@Model.Customer.IsSubscribedToNewsLetter" class="form-check-input">
            <label class="form-check-label" asp-for="@Model.Customer.IsSubscribedToNewsLetter">
            </label>
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

</form>

