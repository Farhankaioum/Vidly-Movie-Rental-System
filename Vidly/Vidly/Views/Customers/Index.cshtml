@model IEnumerable<Customer>
@{
    ViewData["Title"] = "Index";

}

<h1>Customers</h1>
<h4>Customer</h4>

    @if (Model.Count() == 0)
    {
        <h5>We don't have any customers yet</h5>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <td>Customer</td>
                    <td>Discount Rate</td>
                </tr>
                
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                <tr>
                    <td><a asp-action="Details" asp-controller="Customers" asp-route-id="@customer.Id">@customer.Name</a></td>
                    <td>@customer.MembershipType.DiscountRate%</td>
                </tr>
                    
                }
            </tbody>
        </table>

       
    }



