@model IEnumerable<Customer>
@{
    ViewData["Title"] = "Index";

}

<h1>Customers</h1>
<h4>Customer</h4>
<ul>
    @if (Model.Count() == 0)
    {
        <h5>We don't have any customers yet</h5>
    }
    else
    {
        @foreach (var customer in Model)
        {

            <li><a asp-action="Details" asp-controller="Customers" asp-route-id="@customer.Id">@customer.Name</a></li>
        }
    }

</ul>

