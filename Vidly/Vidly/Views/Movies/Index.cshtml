@model IEnumerable<Movie>
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-info">Movies</h1>
<a asp-action="Save" asp-controller="Movies" class="btn btn-info m-2 ml-0 text-uppercase">New Movie</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    
        @if (Model.Count() == 0)
        {
            <tr>
                <td>No movie found</td>
            </tr>
        }
        else
        {

            @foreach (var movie in Model)
            {
                <tr>
                    <td class="text-success"><a asp-controller="Movies" asp-action="Edit" asp-route-id="@movie.Id">@movie.Name</a></td>
                    <td>@movie.Genre.Name</td>
                    
                </tr>
            }
        }
</table>


