@model IEnumerable<Movie>
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-info">Movies</h1>
<table class="table table-bordered" id="movietable">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>

    <tbody>
    </tbody>

</table>

@section Scripts{

    <script>
        $(document).ready(function () {

            // for datatable
            var datatable = $("#movietable").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "genre.name"
                    }
                ]
            });


        });
    </script>

}

